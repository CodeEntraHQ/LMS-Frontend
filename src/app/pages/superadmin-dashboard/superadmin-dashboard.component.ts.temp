        <div class="modal-content" (click)="$event.stopPropagation()">
          <div class="modal-header">
            <h2>{{ actionModalTitle }}</h2>
            <button class="close-btn" (click)="closeActionModal()">√ó</button>
          </div>
          <div class="modal-body">
            <div class="form-group">

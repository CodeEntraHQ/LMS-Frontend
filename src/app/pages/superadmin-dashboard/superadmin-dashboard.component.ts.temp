                    <button class="btn-approve" (click)="approveTeacherAdmission(admission.id!)">
                      ‚úÖ Approve
                    </button>
                    <button class="btn-reject" (click)="rejectTeacherAdmission(admission.id!)">
                      ‚ùå Reject
                    </button>
                  </div>
                </div>
              </div>
